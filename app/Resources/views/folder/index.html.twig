{% extends 'layout/base.html.twig' %}

{% block bodyClass %}folder-index{% endblock %}

{% block body %}
    <div class="container layout-flip-sidebar-md">
        {{ include('_partials/page/breadcrumbs.html.twig') }}
        <div class="main-row row">
            <div class="col-md-3">
                <aside class="meta-side">
                    {% if static_block_manager.has('side_contact') %}
                        {{ static_block_manager.get('side_contact').content|raw }}
                    {% endif %}
                </aside>
            </div>
            <div class="col-md-9">
                <h1 class="page-title">Folder</h1>
                <div class="content is-section">
                    <p>Hier vindt u de op dit moment lopende folders.</p>
                </div>
                <div class="folder">
                    {% if folders %}
                        <ul class="row">
                            {% for folder in folders %}
                                <li class="col-md-6">
                                    <div class="folder-item">
                                        <h2>
                                            <a href="{{ path('folder_view', {'id': folder.id } ) }}"
                                               title="{{ folder.title }}">
                                                {{ folder.title }}
                                            </a>
                                        </h2>
                                        <div>
                                            <div>
                                                <div class="img">
                                                    <a href="{{ path('folder_view', {'id': folder.id } ) }}"
                                                       title="{{ folder.title }}">
                                                        <img src="{{ folder.picture }}" alt="{{ folder.title }}"/>
                                                    </a>
                                                </div>
                                            </div>
                                            <div>
                                                <div class="entry">
                                                    <div class="content">
                                                        <p>{{ folder.shortDescription }}</p>
                                                    </div>
                                                    <a href="{{ path('folder_view', {'id': folder.id } ) }}">
                                                        Lees verder
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                            {% if folders|length %2 != 0 %}
                                <li class="col-md-6"></li>
                            {% endif %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
