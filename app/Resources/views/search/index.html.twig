{% extends 'layout/base.html.twig' %}

{% block bodyClass %}{% endblock %}

{% block body %}
    <div class="container layout-flip-sidebar-sm">
        {{ include('_partials/page/breadcrumbs.html.twig') }}
        <div class="row main-row">
            <div class="col-sm-3">
                {{ include('dummy/search/list.html.twig') }}
            </div>
            <div class="col-sm-9">
                <h1 class="page-title">Zoekresultaten</h1>
                <form class="form-base is-section" action="{{ path('search_index') }}" novalidate>
                    <div class="form-group">
                        <label class="control-label" for="q">Uw zoekterm</label>
                        <input type="text" id="q" name="q" placeholder="" autocomplete="nofill" class="form-control">
                    </div>
                    <div class="form-btn-group">
                        <button type="submit" class="btn">Zoeken</button>
                    </div>
                </form>
                <ul class="product-listing">
                    <li>
                        <div class="product-listing-img">
                            <a href="#"><img
                                        src="https://www.hgt-tilburg.nl/cache/images/userdata/product-images/160x105/0519192032-326-100001010.jpg"
                                        alt=""/></a>
                        </div>
                        <div>
                            <h2><a href="#">AARDAPPEL SCHIJFJES</a></h2>
                            <ul class="product-listing-meta">
                                <li>Aviko</li>
                                <li class="product-listing-meta-weight">2.5kg</li>
                            </ul>
                            <div class="product-listing-button">
                                <a href="#" class="btn btn-icon-label">
                                    <span class="icon"><i class="fas fa-shopping-cart"></i></span>
                                    <span class="label">Bestellen</span>
                                </a>
                            </div>
                            <div class="product-listing-sr">Gevonden in: <a href="#">Buitenhuis</a></div>
                        </div>
                    </li>
                </ul>
                {% if hasResults %}
                    <div class="search-results">
                        {% for key, searchResult in searchResults %}
                            {% if searchResult is not empty %}
                                <div class="search-result content">
                                    {% if key == 'news' %}
                                        <h3>Nieuws</h3>
                                        <ul>
                                            {% for newsItem in searchResult %}
                                                <li><a href="{{ newsItem.urlKey }}">{{ newsItem.title }}</a></li>
                                            {% endfor %}
                                        </ul>
                                    {% elseif key == 'manufacturers' and searchResult is not empty %}
                                        <h3>Merken</h3>
                                        <ul>
                                            {% for manuItem in searchResult %}
                                                <li><a href="{{ manuItem.urlKey }}">{{ manuItem.name }}</a></li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="content"><p>Geen resultaten gevonden.</p></div>
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}
