<li class="">
    <div class="product-listing-img">
        <a href="{{ path('product_view', { 'id': product.id }) }}"><img
                    src="https://www.hgt-tilburg.nl/cache/images/userdata/product-images/160x105/0519192032-326-100001010.jpg"
                    alt="{{ product.name }}"/></a>
    </div>
    <div>
        <h2><a href="{{ path('product_view', { 'id': product.id }) }}">{{ product.name|upper }}</a></h2>
        <ul class="product-listing-meta">
            <li>
                {% if product.manufacturer %}
                    {{ product.manufacturer.name }}
                {% endif %}
            </li>
            <li class="product-listing-meta-weight">{{ product.volume }}</li>
            <li class="product-listing-meta-price">{{ product.price|price }}</li>
        </ul>
        {% if app.user %}
            <div class="product-listing-button">
                <a href="#" class="btn btn-icon-label">
                    <span class="icon"><i class="fas fa-shopping-cart"></i></span>
                    <span class="label">Bestellen</span>
                </a>
            </div>
        {% endif %}
    </div>
</li>
