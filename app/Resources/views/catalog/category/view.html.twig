{% extends 'layout/base.html.twig' %}

{% block bodyClass %}{% endblock %}

{% block body %}
    <div class="container {% if categories %}layout-sidebar-hide-content-md{% else %}{% if category.products %}{% else %}layout-flip-sidebar-md{% endif %}{% endif %}">
        {{ include('_partials/page/breadcrumbs.html.twig') }}
        <div class="page-title-container">
            <div class="row">
                <div class="col-md-3">
                    {% if category.parent %}
                        <a href="{{ path('category_view', {'id': category.parent.id }) }}" class="btn-border">
                            <i class="fas fa-arrow-left"></i>
                            <span>Terug</span>
                        </a>
                    {% else %}
                        <a href="{{ path('category_index') }}" class="btn-border">
                            <i class="fas fa-arrow-left"></i>
                            <span>Terug</span>
                        </a>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <h1 class="page-title">{{ category.name }}</h1>
                </div>
            </div>
        </div>
        <div class="row main-row">
            <div class="col-md-3">
                {% if parentCategories %}
                    {% include '_partials/catalog/category/list.html.twig' with {'categories' : parentCategories } %}
                {% endif %}
            </div>
            <div class="col-md-9">
                {% if categories %}
                    <div class="item-block-list-rwd">
                        {% include '_partials/catalog/product/list.html.twig' with {'categories' : categories } %}
                    </div>
                {% else %}
                    {% if category.products %}
                        {% for product in category.products %}
                            {{ include('_partials/catalog/product/item.html.twig', {'product' : product }) }}
                        {% endfor %}
                    {% else %}
                        <div class="content">
                            <p>Geen categorieÃ«n/producten gevonden in deze categorie.</p>
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
