{% extends 'layout/base.html.twig' %}

{% block bodyClass %}{% endblock %}

{% block body %}
    <div class="container layout-sidebar-hide-content-md">
        {{ include('_partials/page/breadcrumbs.html.twig') }}
        <div class="page-title-container page-title-container-hide-md">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <h1 class="page-title">Ons assortiment</h1>
                </div>
            </div>
        </div>
        <div class="row main-row">
            <div class="col-md-3">
                {% if categories %}
                    {% include '_partials/catalog/category/list.html.twig' with {'categories' : categories } %}
                {% endif %}
            </div>
            <div class="col-md-9">
                {% if categories %}
                    <div class="item-block-list-rwd">
                        {% include '_partials/catalog/product/list.html.twig' with {'categories' : categories } %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
