{% extends 'layout/base.html.twig' %}

{% block bodyClass %}{% endblock %}

{% block body %}
    <div class="container layout-flip-sidebar-sm">
        {{ include('_partials/page/breadcrumbs.html.twig') }}

        <div class="row main-row">
            <div class="col-sm-3">
              {{ include('_partials/page/sidebar.html.twig') }}
            </div>
            <div class="col-sm-9">
                {% set newsSingle = true %}
                {% if newsSingle == true %}
                  {{ include('news/single.html.twig') }}
                {% else %}
                  {{ include('news/overview.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
