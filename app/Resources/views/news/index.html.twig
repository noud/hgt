{% extends 'layout/base.html.twig' %}

{% block bodyClass %}news-index{% endblock %}

{% block body %}
    <div class="template-sidebar container">
        <div class="row">
            <div class="col-sm-4 col-md-3">
                <aside class="meta-side">
                    {% autoescape false %}
                        {{ static_block_manager.getByIdentifier('contact_folder') }}
                    {% endautoescape %}
                </aside>
            </div>
            <div class="col-sm-8 col-md-9">
                {% set newsSingle = true %}
                {% if newsSingle == false %}
                  {{ include('news/single.html.twig') }}
                {% else %}
                  {{ include('news/overview.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
