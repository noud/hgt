{% extends 'layout/base.html.twig' %}

{% block bodyClass %}news-index template-sidebar{% endblock %}

{% block body %}
    <div class="container">
        {{ include('_partials/page/breadcrumbs.html.twig') }}

        <div class="row main-row">
            <div class="col-sm-4 col-md-3">
                <aside class="meta-side">
                    {% if static_block_manager.has('side_contact') %}
                        {{ static_block_manager.get('side_contact').content|raw }}
                    {% endif %}
                </aside>
            </div>
            <div class="col-sm-8 col-md-9">
                {% set newsSingle = false %}
                {% if newsSingle == false %}
                  {{ include('news/single.html.twig') }}
                {% else %}
                  {{ include('news/overview.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
