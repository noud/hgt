{% extends 'layout/base.html.twig' %}

{% block body %}
    <h1>{{ categoryInfo.name }}</h1>
    {% if categories %} cat {% else %} prod {% endif %}
    <div class="container">
        <div class="row">
            {% if categories %}
                <div class="col-md-3">
                    <ul>
                        {% for category in categories %}
                            <li><a href="{{ category.id }}">{{ category.name }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-md-9">
                    {% for category in categories %}
                        <div class="col-md-4" style="border: 1px solid #DDD; text-align: center">
                            <a href="{{ path('category_view', { 'id': category.id }) }}">
                                <div>
                                    <img src="http://via.placeholder.com/250x250{# category.picture #}" alt="{{ category.name }}"/>
                                </div>
                                <div>
                                    {{ category.name }}
                                    <span class="amount">({{ category.totalProductCount }})</span>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                {{ products }}
            {% endif %}
        </div>
    </div>
{% endblock %}
