{% extends 'layout/base.html.twig' %}

{% block body %}
    <div class="wrapper">
        <h1>{{ category.name }}</h1>
        {% if categories %}
            <div class="row">
                <div class="col-md-3">
                    <ul>
                        {% for category in categories %}
                            <li>
                                <a href="{{ path('category_view', {'id': category.id }) }}" class="listing">
                                    {{ category.name }}
                                    <span class="icon"><i class="fa fa-chevron-right"></i></span>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-md-9">
                    {% for category in categories %}
                        <div class="col-md-4" style="border: 1px solid #DDD; text-align: center">
                            <a href="{{ path('category_view', { 'id': category.id }) }}">
                                <div>
                                    <img src="http://via.placeholder.com/250x250{# category.picture #}" alt="{{ category.name }}" />
                                </div>
                                <div>
                                    {{ category.name }}
                                    <span class="amount">({{ category.totalProductCount }})</span>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% else %}
            {% for product in category.products %}
                {{  include('_partials/catalog/product/item.html.twig', {'product' : product }) }}
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
