{% extends 'layout/base.html.twig' %}

{% block bodyClass %}account-index{% endblock %}

{% block body %}
    <div class="container layout-flip-sidebar-sm">
        {{ include('_partials/page/breadcrumbs.html.twig') }}
        <div class="row main-row">
            <div class="col-sm-3">
                {{ include('_partials/account/list.html.twig') }}
            </div>
            <div class="col-sm-9">
                <h1 class="page-title">Mijn wachtwoord</h1>
                <div class="content">
                {{ form_start(form) }}
                    {{ form_row(form.oldPassword) }}
                    {{ form_row(form.plainPassword.first) }}
                    {{ form_row(form.plainPassword.second) }}
                    <button type="submit" class="btn btn-primary">Wijzig Wachtwoord</button>
                {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
